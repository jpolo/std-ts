# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

# 2 space indentation
[*.{js,jsx,ts,tsx,css,scss,less}]
quote_type = single
